<% include ../partials/header %>


<div class="form-bg container-fluid mt-3 pb-2">
  <h3 class="text-light text-center pt-2 ">Add a new Campground</h2>
   <span class="input-group">
     <form action="/campgrounds" method="POST" class="mx-auto">
      <input class="my-3 form-control" id="newcamp" type="text" placeholder="Add Campground" name="newcamp" required> 
      <input class="my-3 form-control" type="text" id="campimg" placeholder="Image URL" name="newcampimg" required>    
      <input class="my-3 form-control" type="text" id="newcampinfo" placeholder="Description" name="newcampinfo" required>    
      <input class="btn btn-success form-control mt-3" type="submit">
      <a class="text-light" href="/campgrounds">Go Back</a>
     </form>
   </span>
</div>





