<% include partials/header %> 



<header class="container ">
 <div class="jumbotron mt-4">
  <h1 class="display-4"><i class="fas fa-campground"></i> Campgrounds</h1>
  <p class="lead">Browse through the views and reviews of various campgrounds from your fellow campers all around the world.</p>
  <hr class="my-4">
  <p>Do you know a campground that deserves to be shared, or does it need a gentle push to bring itself up to code, Feel free to post your thoughts.</p>
  <a class="btn btn-success btn-lg" href="/campgrounds/new" role="button">Add Campground</a>
 </div>
</header>




<div class="container">
 <div class="row">
  <% camps.forEach(function(camps) { %>
   <div class="col-md-6 col-lg-4">
    <div class="card mb-3 bg-light">
    <div class="card-header">
     <h5 class="text-center"><%= camps.name %> </h5>
    </div>
    <div class="card-body">
     <img class="img-thumbnail" src="<%= camps.image %>">
    </div>
   </div>
   </div>
  <% }); %>
 </div>
</div>



<% include partials/footer %> 


